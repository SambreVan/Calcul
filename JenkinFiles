pipeline {
    agent any

    environment {
        // Définir les variables d'environnement nécessaires
        FLASK_APP = 'app.py'
    }

    stages {
        stage('Build') {
            steps {
                // Construire l'image Docker
                sh 'docker build -t flask-calculator-app .'
            }
        }
        stage('Test') {
            steps {
                // Ici, vous pouvez ajouter des étapes pour exécuter des tests
                echo 'Des tests pourraient être exécutés ici'
            }
        }
        stage('Deploy') {
            steps {
                // Déployer l'application en utilisant Docker
                sh 'docker run -d -p 5000:5000 flask-calculator-app'
            }
        }
    }
}
